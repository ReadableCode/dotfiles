{
  // Theme
  "workbench.colorTheme": "Dracula Theme",
  // SSH
  "remote.SSH.remotePlatform": {
    "HelloFreshJason": "linux",
    "nukbuntu": "linux",
    "raspberrypi4": "linux",
    "JasonZephyrus": "windows",
    "Shelly": "windows",
    "HelloFreshJasonZFold4": "linux",
    "Spectre": "windows",
    "EliteDesk": "linux",
    "hellofreshjason": "linux",
    "elitedesk": "linux",
    "HelloFreshJasonIP": "linux",
    "192.168.86.4": "linux"
  },
  "remote.SSH.useLocalServer": true,
  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "always",
  "git.alwaysShowStagedChangesResourceGroup": true,
  "git.autoStash": true,
  "git.replaceTagsWhenPull": true,
  "githubPullRequests.ignoredPullRequestBranches": ["master"],
  //Git Poliot and Suggestions
  "editor.inlineSuggest.enabled": true,
  "editor.suggest.matchOnWordStartOnly": false,
  "inlineChat.mode": "preview",
  // Auto Formatting
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "notebook.formatOnSave.enabled": true,
  "notebook.formatOnCellExecution": true,
  "files.eol": "\n",
  "editor.trimAutoWhitespace": false,
  // Auto Formatting - Language Specific
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format",
    "editor.detectIndentation": false,
    "editor.insertSpaces": false,
    "editor.tabSize": 4 // You can change this to your preferred tab size
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[sql]": {
    "editor.defaultFormatter": "inferrinizzard.prettier-sql-vscode"
  },
  "[dot]": {
    "editor.defaultFormatter": "tintinweb.graphviz-interactive-preview",
    "graphviz-interactive-preview.renderLockAdditionalTimeout": 5000
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Auto Formatting - Black / Flake8
  "black-formatter.importStrategy": "fromEnvironment",
  "flake8.importStrategy": "useBundled",
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "black",
  "python.formatting.blackArgs": ["--fast"],
  // Auto Formatting - isort
  "python.sortImports.path": "isort",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always"
  },
  "python.sortImports.args": ["--profile", "black"],
  "isort.args": ["--profile", "black"],
  // Auto Formatting - Prettier-SQL
  "Prettier-SQL.denseOperators": true,
  "Prettier-SQL.keywordCase": "upper",
  "Prettier-SQL.SQLFlavourOverride": "snowflake",
  // TODO Tree
  "todo-tree.general.rootFolder": "${workspaceFolder}",
  "todo-tree.tree.showCountsInTree": true,
  "todo-tree.regex.regexCaseSensitive": false,
  "todo-tree.general.showActivityBarBadge": true,
  "todo-tree.general.statusBar": "top three",
  "todo-tree.filtering.excludeGlobs": [
    "**/node_modules/*/**",
    "**/*.egg-info",
    "**/todo.py"
  ],
  // Notebooks
  "jupyter.interactiveWindow.creationMode": "perFile",
  "jupyter.askForKernelRestart": false,
  "jupyter.interactiveWindow.textEditor.executeSelection": true,
  "notebook.outline.showCodeCells": true,
  "notebook.consolidatedRunButton": true,
  "notebook.compactView": false,
  "notebook.lineNumbers": "on",
  "notebook.showFoldingControls": "always",
  "notebook.output.textLineLimit": 20000,
  "notebook.output.scrolling": true,
  "interactiveWindow.alwaysScrollOnNewCell": false,
  // Editor View
  "editor.stickyScroll.maxLineCount": 10,
  "editor.stickyScroll.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.minimap.size": "fill",
  "editor.bracketPairColorization.enabled": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.wordWrap": "off",
  "editor.accessibilitySupport": "off",
  "editor.renderWhitespace": "all",
  "window.zoomLevel": 1,
  "diffEditor.useInlineViewWhenSpaceIsLimited": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "scm.showHistoryGraph": false,
  // File Handling
  "files.autoSave": "onFocusChange",
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.ipynb": "jupyter-notebook",
    "*.csv": "default"
  },
  "files.associations": {
    "*.md": "markdown",
    "*.yaml": "yaml",
    "templates/*.yaml": "helm"
  },
  "files.maxMemoryForLargeFilesMB": 12000,
  "workbench.editorLargeFileConfirmation": 50,
  "files.exclude": {
    "**/.DS_Store": false,
    "**/.git": false,
    "**/.hg": false,
    "**/.svn": false,
    "**/CVS": false,
    "**/Thumbs.db": false
  },
  "markdown.mermaidConfig": {
    "maxTextSize": 9000000
  },
  // Terminal
  "python.terminal.executeInFileDir": true,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "powershell.cwd": "c:\\Users\\jason\\GitHub",
  // Security
  "security.workspace.trust.enabled": false,
  "interactiveWindow.executeWithShiftEnter": true,
  "notebook.defaultFormatter": "ms-python.black-formatter",
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.typeCheckingMode": "standard",
  "python.analysis.inlayHints.variableTypes": true,
  "scm.repositories.sortOrder": "path",
  "scm.repositories.visible": 100,
  "go.toolsManagement.autoUpdate": true,
  "python.analysis.indexing": false,
  "python.analysis.useLibraryCodeForTypes": false,
  "python.analysis.include": [
    "**/dotfiles/**",
    "**/Data_Tool_Pack_Py/**",
    "**/Terminal_To_Do/**"
  ],
  "python.analysis.exclude": [
    "**/__pycache__/**",
    "**/.cargo/**",
    "**/.git/**",
    "**/.github/**",
    "**/.mypy_cache/**",
    "**/.pytest_cache/**",
    "**/.ruff_cache/**",
    "**/.venv/**",
    "**/build/**",
    "**/data/**",
    "**/dist/**",
    "**/health_data/**",
    "**/Lib/**",
    "**/node_modules/**",
    "**/Samsung Health/**",
    "**/site-packages/**",
    "**/Syncthing_Synced/**",
    "**/target/**",
    "**/venv/**",
    "**/*.pyc",
    "**/*.pyo"
    //   // ignore repos I don't work on often
    //   "**/3D_Models/**",
    //   "**/a_girls_guide_to_georgetown/**",
    //   "**/Ani-Game/**",
    //   "**/Assistant/**",
    //   "**/Book-Bot/**",
    //   "**/context-chatbot/**",
    //   "**/CrownCentral/**",
    //   "**/Data_Tool_Pack_RS/**",
    //   "**/Documents/**",
    //   "**/duck_db_api/**",
    //   "**/fourteen_foods/**",
    //   "**/Gmail_Extractor/**",
    //   "**/go-data-inspector/**",
    //   "**/Health_Data_Parser/**",
    //   "**/Kivy_Test_Suite/**",
    //   "**/na-faba/**",
    //   "**/na-fin-data-streamlit/**",
    //   "**/na-finops/**",
    //   "**/OSINT/**",
    //   "**/Our_Cash/**",
    //   "**/Project_Template/**",
    //   "**/Rust_Tutorial/**",
    //   "**/Scan_Sorter/**",
    //   "**/Something-Familiar/**",
    //   "**/website/**"
  ],
  "files.watcherExclude": {
    "**/.git": true,
    "**/.venv": true,
    "**/venv": true,
    "**/__pycache__": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.ruff_cache": true,
    "**/health_data": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true,
    "**/target": true,
    "**/Samsung Health": true,
    "**/.cargo": true
  },
  "python.analysis.enableEditableInstalls": false,
  "python.analysis.enableExperimentalServer": false,
  "python.analysis.enablePytestSupport": false,
  "python.analysis.nodeExecutable": "auto",
  "cSpell.userWords": [
    "hackathons",
    "Alteryx",
    "Christiansen",
    "codebases",
    "FABA",
    "Knime",
    "Mendix",
    "Onboarded",
    "Qlik",
    "Streamlit"
  ],
  "cSpell.enabledFileTypes": {
    "*": false
  },
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, bun.lock",
    "*.sqlite": "${capture}.${extname}-*",
    "*.db": "${capture}.${extname}-*",
    "*.sqlite3": "${capture}.${extname}-*",
    "*.db3": "${capture}.${extname}-*",
    "*.sdb": "${capture}.${extname}-*",
    "*.s3db": "${capture}.${extname}-*"
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false
  },
  "diffEditor.codeLens": true,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.hideUnchangedRegions.contextLineCount": 10,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "docker.extension.enableComposeLanguageServer": true,
  "github.copilot.nextEditSuggestions.enabled": false,
  // Vim Settings
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.smartRelativeLine": false,
  // Vim keep vscode find, open, save, comment
  "vim.handleKeys": {
    "<C-f>": false, // keep ctrl-f for find
    "<C-s>": false, // keep ctrl-s for save
    "<C-p>": false, // keep ctrl-p for open file
    "<C-/>": false // keep ctrl-/ for comment
  },
  // Fix git terminal authentication issue
  "git.terminalAuthentication": false,
  "terminal.integrated.env.windows": {
    "GIT_SSH": ""
  }
}
